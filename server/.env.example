# Application
NODE_ENV=development
PORT=3000

# GraphHopper
GRAPHHOPPER_URL=http://localhost:8989

# Security
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
API_KEY_SECRET=your-secret-key-here

# Redis Cache
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# GraphHopper Configuration
GH_MEMORY_LIMIT=4g
GH_PROFILES=running,cycling,walking

# OSM Data
OSM_FILE_URL=https://download.geofabrik.de/europe/france-latest.osm.pbf
OSM_UPDATE_INTERVAL=weekly

# Optional: External Services
ELEVATION_API_KEY=
WEATHER_API_KEY=
GEOCODING_API_KEY=